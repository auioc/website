{
    "plugins": ["prettier-plugin-go-template"],
    "overrides": [
        {
            "files": ["**/layouts/**/*.html", "**/layouts/**/fn/**/*"],
            "options": {
                "tabWidth": 2,
                "printWidth": 1200,
                "parser": "go-template",
                "goTemplateBracketSpacing": true,
                "bracketSameLine": true
            }
        }
    ],
    "htmlWhitespaceSensitivity": "ignore",
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "insertPragma": false,
    "singleAttributePerLine": false,
    "bracketSameLine": true,
    "printWidth": 80,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
}
